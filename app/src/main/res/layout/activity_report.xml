<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.ReportActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="-129dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/icons_warning" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat"
                android:scaleType="centerInside"
                android:text="Catat Masalah"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/merah_1"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/lora"
                android:text="Masalah ?"
                android:textColor="@color/hijau_tua_1"
                android:translationX="100dp"
                app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName" />

            <EditText
                android:id="@+id/editMasalah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                 />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lora"
                android:scaleType="centerInside"
                android:text="Kapan ?"
                android:textColor="@color/hijau_tua_1"
                android:translationX="100dp" />

            <EditText
                android:id="@+id/editHariMasalah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:scaleType="centerInside"
                android:text="hh-mm-yy"
                android:textColor="@color/abu_1"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lora"
                android:scaleType="centerInside"
                android:text="Level Masalah 1-3"
                android:textColor="@color/hijau_tua_1"
                android:translationX="100dp" />

            <EditText
                android:id="@+id/editLevelMasalah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                 />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/lora"
                android:scaleType="centerInside"
                android:text="Contoh\n\nLevel 1:\nBanyak gulma \n\nLevel 2:\nSawah kering\nhama tikus, terlalu banyak air, \npenyakit dalam skala kecil\n\n Level 3\nPenyakit padi dalam skala besar,\npadi banyak yang mati "
                android:layout_gravity="center" />

            <Button
                android:id="@+id/btn_submit_report"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/shape_green_btn"
                android:fontFamily="@font/montserrat"
                android:scaleType="centerInside"
                android:shadowColor="@color/abu_3"
                android:text="Simpan"
                android:textAllCaps="false"
                android:textColor="@color/abu_3"
                android:layout_marginBottom="40dp"
                />

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>