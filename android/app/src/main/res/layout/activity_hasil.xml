<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putih_background_1"
    tools:context=".scan.HasilActivity">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shape_green_young_2_btn" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="588dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shape_abu_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengertian"
                android:layout_marginStart="40dp"
                android:layout_marginTop="50dp"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/descPengertian"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:text="Deskirpsi pengertian"
                app:layout_constraintStart_toStartOf="@+id/textView15"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Penyebab"
                android:textSize="19dp"
                android:textStyle="bold"
                android:layout_marginStart="40dp"
                 />

            <TextView
                android:id="@+id/descPenyebab"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Deskirpsi penyebab"
                android:layout_marginStart="40dp"
                />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Akibat"
                android:textSize="19dp"
                android:textStyle="bold"
                android:layout_marginStart="40dp"
                />

            <TextView
                android:id="@+id/descAkibat"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Deskirpsi penyebab"
                android:layout_marginStart="40dp"
                />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Cara mengatasi"
                android:textSize="19dp"
                android:textStyle="bold"
                android:layout_marginStart="40dp"
                />

            <TextView
                android:id="@+id/descSolusi"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Deskirpsi cara mengatasi"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="40dp"
                />




        </LinearLayout>




    </ScrollView>

    <TextView
        android:id="@+id/hasil_deteksi_general"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="Hasil Deteksi"
        android:textColor="@color/biru_1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />

</androidx.constraintlayout.widget.ConstraintLayout>